# Emotion Recognition Application Configuration
# Copy this file to .env and update with your settings

# Application Settings
APP_NAME="Emotion Recognition System"
APP_VERSION="2.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Data Paths
# Base directory for all data files (use absolute path or relative to project root)
DATA_DIR=./data
RAW_DATA_EEG_PATH=./data/deap/data_preprocessed_python
MODELS_DIR=./models
LOGS_DIR=./logs

# EEG Configuration
LABEL_THRESHOLD=4.5
N_USER_TOTAL=32
N_TRIAL_TOTAL=40
N_TIME_TOTAL=8064
SAMPLING_RATE=60

# Training Configuration
N_USER_TRAIN_START=1
N_USER_TRAIN_END=24
N_USER_TEST_START=25
N_USER_TEST_END=32

# Camera Settings
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# UI Settings
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080
THEME=dark
LANGUAGE=Turkish
ANIMATION_DURATION=300

# Performance Settings
PLOT_UPDATE_INTERVAL=100
CAMERA_UPDATE_INTERVAL=33
MAX_CACHE_SIZE=1000

# Machine Learning
DEFAULT_ML_MODEL=KNN
KNN_NEIGHBORS=5
KNN_LEAF_SIZE=200
